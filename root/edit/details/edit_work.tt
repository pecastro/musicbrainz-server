<table class="details edit-work">
  <tr>
    <th>[% l('Work:') %]</th>
    <td>
      [% descriptive_link(edit.display_data.work) %]
    </td>
  </tr>

  [%- IF edit.display_data.name -%]
  <tr>
    <th>[% l('Name:') %]</th>
    <td class="old">[% edit.display_data.name.old | html %]</td>
    <td class="new">[% edit.display_data.name.new | html %]</td>
  </tr>
  [%- END -%]

  [%- IF edit.display_data.comment -%]
  <tr>
    <th>[% l('Comment:') %]</th>
    <td class="old">[% edit.display_data.comment.old | html %]</td>
    <td class="new">[% edit.display_data.comment.new | html %]</td>
  </tr>
  [%- END -%]

  [%- IF edit.display_data.iswc -%]
  <tr>
    <th>[% l('ISWC:') %]</th>
    <td class="old">[% edit.display_data.iswc.old | html %]</td>
    <td class="new">[% edit.display_data.iswc.new | html %]</td>
  </tr>
  [%- END -%]

  [%- IF edit.display_data.type -%]
  <tr>
    <th>[% l('Work Type:') %]</th>
    <td class="old">[% edit.display_data.type.old.name | html %]</td>
    <td class="new">[% edit.display_data.type.new.name | html %]</td>
  </tr>
  [%- END -%]

  [%- IF edit.display_data.artist_credit -%]
  <tr>
    <th>[% l('Artist:') %]</th>
    <td class="old">[% artist_credit(edit.display_data.artist_credit.old) %]</td>
    <td class="new">[% artist_credit(edit.display_data.artist_credit.new) %]</td>
  </tr>
  [%- END -%]
</table>
